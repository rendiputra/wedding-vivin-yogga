---
import SectionContainer from "./SectionContainer.astro";
import { weddingData } from "../data/content";

const { event } = weddingData;
---

<div class="bg-damask">
    <SectionContainer id="location">
        <!-- Section Title -->
        <div class="text-center mb-8" data-aos="fade-up">
            <h2 class="section-title" style="font-family: var(--font-serif);">
                Lokasi Acara
            </h2>
            <div class="ornament-divider">
                <svg
                    width="16"
                    height="16"
                    viewBox="0 0 20 20"
                    class="text-accent-gold"
                >
                    <path
                        d="M10 0L12.245 7.755L20 10L12.245 12.245L10 20L7.755 12.245L0 10L7.755 7.755L10 0Z"
                        fill="currentColor"></path>
                </svg>
            </div>
        </div>

        <!-- Map Embed -->
        <div
            class="rounded-2xl overflow-hidden border-2 border-accent-gold/20 shadow-lg mb-6"
            data-aos="zoom-in"
            data-aos-delay="100"
        >
            <iframe
                src={event.mapsEmbed}
                width="100%"
                height="300"
                style="border:0;"
                loading="lazy"
                title="Lokasi Acara Pernikahan"
                class="w-full"></iframe>
        </div>

        <!-- Get Directions Button -->
        <div class="text-center" data-aos="fade-up" data-aos-delay="200">
            <a
                href={event.mapsUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="btn-gold-outline"
                id="directions-btn"
            >
                <svg
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <polygon points="3 11 22 2 13 21 11 13 3 11"></polygon>
                </svg>
                Petunjuk Arah
            </a>
        </div>
    </SectionContainer>
</div>
