---
interface Props {
    flip?: boolean;
    fillColor?: string;
}

const { flip = false, fillColor = "var(--color-primary-cream)" } = Astro.props;
---

<div
    class:list={[
        "scallop-separator w-full overflow-hidden leading-none",
        { "rotate-180": flip },
    ]}
>
    <svg
        viewBox="0 0 1200 60"
        preserveAspectRatio="none"
        class="w-full h-[30px] md:h-[50px] block"
        xmlns="http://www.w3.org/2000/svg"
    >
        <path
            d={`M0,60 
        C50,0 100,0 150,60 
        C200,0 250,0 300,60 
        C350,0 400,0 450,60 
        C500,0 550,0 600,60 
        C650,0 700,0 750,60 
        C800,0 850,0 900,60 
        C950,0 1000,0 1050,60 
        C1100,0 1150,0 1200,60 
        L1200,60 L0,60 Z`}
            fill={fillColor}></path>
    </svg>
</div>
