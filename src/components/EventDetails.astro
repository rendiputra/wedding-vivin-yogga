---
import SectionContainer from "./SectionContainer.astro";
import { weddingData } from "../data/content";

const { event } = weddingData;
---

<div class="bg-primary-cream-dark">
    <SectionContainer id="event">
        <!-- Section Title -->
        <div class="text-center mb-10" data-aos="fade-up">
            <p class="section-subtitle">Insya Allah akan dilaksanakan pada</p>
            <h2 class="section-title" style="font-family: var(--font-serif);">
                Acara Pernikahan
            </h2>
            <div class="ornament-divider">
                <svg
                    width="16"
                    height="16"
                    viewBox="0 0 20 20"
                    class="text-accent-gold"
                >
                    <path
                        d="M10 0L12.245 7.755L20 10L12.245 12.245L10 20L7.755 12.245L0 10L7.755 7.755L10 0Z"
                        fill="currentColor"></path>
                </svg>
            </div>
        </div>

        <!-- Date Banner -->
        <div class="text-center mb-8" data-aos="fade-up" data-aos-delay="100">
            <p
                class="text-accent-gold-dark text-lg md:text-xl font-semibold tracking-wider"
                style="font-family: var(--font-serif);"
            >
                {event.date}
            </p>
        </div>

        <!-- Event Cards -->
        <div
            class="flex flex-col md:flex-row items-stretch justify-center gap-6 md:gap-0 mb-10"
        >
            <!-- Akad Nikah -->
            <div
                class="flex-1 text-center px-6 py-8 rounded-2xl md:rounded-r-none bg-white/50 border border-accent-gold/20"
                data-aos="fade-right"
                data-aos-delay="200"
            >
                <!-- Ring Icon -->
                <div
                    class="w-14 h-14 mx-auto mb-4 rounded-full bg-accent-gold/10 flex items-center justify-center"
                >
                    <svg
                        width="28"
                        height="28"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="1.5"
                        class="text-accent-gold"
                    >
                        <circle cx="9" cy="12" r="5"></circle>
                        <circle cx="15" cy="12" r="5"></circle>
                    </svg>
                </div>
                <h3
                    class="text-xl font-semibold text-text-dark mb-2"
                    style="font-family: var(--font-serif);"
                >
                    Akad Nikah
                </h3>
                <p class="text-text-muted text-sm mb-1">Pukul</p>
                <p
                    class="text-2xl font-bold text-accent-gold-dark"
                    style="font-family: var(--font-serif);"
                >
                    {event.akad}
                </p>
            </div>

            <!-- Center Divider -->
            <div class="hidden md:flex items-center px-4">
                <div
                    class="w-px h-full bg-gradient-to-b from-transparent via-accent-gold/40 to-transparent"
                >
                </div>
            </div>

            <!-- Mobile Divider -->
            <div class="flex md:hidden items-center justify-center">
                <div
                    class="h-px w-32 bg-gradient-to-r from-transparent via-accent-gold/40 to-transparent"
                >
                </div>
            </div>

            <!-- Resepsi -->
            <div
                class="flex-1 text-center px-6 py-8 rounded-2xl md:rounded-l-none bg-white/50 border border-accent-gold/20"
                data-aos="fade-left"
                data-aos-delay="200"
            >
                <!-- Utensils Icon -->
                <div
                    class="w-14 h-14 mx-auto mb-4 rounded-full bg-accent-gold/10 flex items-center justify-center"
                >
                    <svg
                        width="28"
                        height="28"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="1.5"
                        class="text-accent-gold"
                    >
                        <path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 0 0 2-2V2"></path>
                        <path d="M7 2v20"></path>
                        <path
                            d="M21 15V2v0a5 5 0 0 0-5 5v6c0 1.1.9 2 2 2h3Zm0 0v7"
                        ></path>
                    </svg>
                </div>
                <h3
                    class="text-xl font-semibold text-text-dark mb-2"
                    style="font-family: var(--font-serif);"
                >
                    Resepsi
                </h3>
                <p class="text-text-muted text-sm mb-1">Pukul</p>
                <p
                    class="text-2xl font-bold text-accent-gold-dark"
                    style="font-family: var(--font-serif);"
                >
                    {event.resepsi}
                </p>
            </div>
        </div>

        <!-- Location Box -->
        <div
            class="text-center p-6 rounded-2xl bg-white/60 border border-accent-gold/20"
            data-aos="fade-up"
            data-aos-delay="300"
        >
            <div
                class="w-10 h-10 mx-auto mb-3 rounded-full bg-accent-gold/10 flex items-center justify-center"
            >
                <svg
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                    class="text-accent-gold"
                >
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"
                    ></path>
                    <circle cx="12" cy="10" r="3"></circle>
                </svg>
            </div>
            <h4
                class="text-base font-semibold text-text-dark mb-1"
                style="font-family: var(--font-serif);"
            >
                {event.mainLocation}
            </h4>
            <p class="text-text-muted text-sm leading-relaxed max-w-md mx-auto">
                {event.address}
            </p>
        </div>
    </SectionContainer>
</div>
